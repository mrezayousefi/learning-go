package main

import (
	"fmt"
)

// ثابت‌ها (constants) -> مقدارشان تغییر نمی‌کند
const Pi = 3.14

// ساختار (struct) -> نوع داده مرکب که چند مقدار مختلف را در خود نگه می‌دارد
type Person struct {
	Name string
	Age  int
}

func main() {
	// --- متغیرها (variables) ---
	var greeting string = "Welcome to Go!" // تعریف متغیر به روش کامل
	year := 2025                           // تعریف متغیر به روش کوتاه
	isLearning := true                     // نوع bool

	// چاپ مقادیر متغیرها
	fmt.Println(greeting, "Year:", year, "Learning Go?", isLearning)

	// --- آرایه (array) ---
	// آرایه طول ثابت دارد
	var numbers = [3]int{10, 20, 30}
	fmt.Println("Array:", numbers)

	// --- برش (slice) ---
	// برش مانند آرایه است ولی طولش می‌تواند تغییر کند
	fruits := []string{"Apple", "Banana", "Cherry"}
	fruits = append(fruits, "Orange") // اضافه کردن مقدار جدید
	fmt.Println("Slice:", fruits)

	// --- ساختار و نمونه‌سازی (struct instance) ---
	person := Person{Name: "Ali", Age: 25}
	fmt.Println("Person:", person.Name, "Age:", person.Age)

	// --- شرط (if, else) ---
	if person.Age >= 18 {
		fmt.Println(person.Name, "is an adult.") // اگر سن بیشتر یا مساوی ۱۸ باشد
	} else {
		fmt.Println(person.Name, "is a minor.") // در غیر این صورت
	}

	// --- شرط با switch ---
	day := 3
	switch day {
	case 1:
		fmt.Println("Monday")
	case 2:
		fmt.Println("Tuesday")
	case 3:
		fmt.Println("Wednesday")
	default:
		fmt.Println("Another day")
	}

	// --- حلقه for ---
	// حلقه‌ای که ۳ بار اجرا می‌شود
	for i := 0; i < 3; i++ {
		fmt.Println("Loop count:", i)
	}

	// --- تابع (function) ---
	// فراخوانی تابع محاسبه مساحت دایره
	fmt.Println("Area of circle with radius 5:", areaOfCircle(5))
}

// تابع برای محاسبه مساحت دایره
func areaOfCircle(radius float64) float64 {
	return Pi * radius * radius
}
